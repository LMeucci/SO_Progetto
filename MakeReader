CC= gcc
CFLAGS= -g -Wall -O2
#$(wildcard *.h) funzione che prende tutti i file .h nella directory corrente
HEADERS:= $(wildcard *.h)
SRC:= OnPC_reader.c
OBJ:= $(SRC:%.c=%.o)
BINS:= $(SRC:%.c=%)
TARGET= OnPC_reader

.PHONY: all clean install execute

all: clean install execute

install: $(TARGET)

$(TARGET): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c $(HEADERS)
	$(CC) $(CFLAGS) -c -o $@ $<

execute:
	./$(TARGET)

clean:
	rm -rf *.o *.~ $(BINS)
